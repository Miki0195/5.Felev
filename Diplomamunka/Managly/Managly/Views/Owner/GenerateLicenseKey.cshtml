@model Managly.Models.OwnerDashboard.GenerateLicenseKeyViewModel
@{
    ViewData["Title"] = "Generate License Key";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<div class="container-fluid">
    <div class="mb-4">
        <a href="@Url.Action("LicenseKeys", "Owner")" class="btn btn-outline-primary mb-2">
            <i class="fas fa-arrow-left"></i> Back to License Keys
        </a>
        <h1 class="h3 text-gray-800 mb-0">Generate License Key</h1>
    </div>

    <div class="row">
        <div class="col-xl-6 col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">Generate New License Key</h6>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateLicenseKey" asp-controller="Owner" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="ExpirationDate" class="form-label">Expiration Date (Optional)</label>
                            <input asp-for="ExpirationDate" type="date" class="form-control">
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                            <div class="form-text">Leave blank for non-expiring license key.</div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("LicenseKeys", "Owner")" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-key me-1"></i> Generate License Key
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6 col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold">About License Keys</h6>
                </div>
                <div class="card-body">
                    <p>License keys are used to activate company accounts in the Managly platform.</p>
                    
                    <h6 class="font-weight-bold mt-4">Key Features</h6>
                    <ul>
                        <li>Each license key can only be used once to register a company</li>
                        <li>Keys can have optional expiration dates</li>
                        <li>When a company is deleted, its license key becomes available again</li>
                        <li>License keys are generated securely using cryptographically secure methods</li>
                    </ul>
                    
                    <h6 class="font-weight-bold mt-4">Key States</h6>
                    <div class="d-flex align-items-center mb-2">
                        <span class="status-badge badge-available me-2">Available</span>
                        <span>Ready to be assigned to a new company</span>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="status-badge badge-active me-2">Active</span>
                        <span>Currently in use by a company</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="status-badge badge-expired me-2">Expired</span>
                        <span>Past the expiration date</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 