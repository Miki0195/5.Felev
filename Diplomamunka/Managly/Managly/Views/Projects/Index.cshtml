@{
    ViewData["Title"] = "Projects";
}

<link rel="stylesheet" href="~/css/Projects/Index.css">

<div class="projects-container">
    @await Html.PartialAsync("_ProjectsSidebar")

    <div class="projects-content" id="projectsContent">
        <div class="welcome-message">
            <i class="bi bi-folder-symlink display-1 mb-3"></i>
            <h3>Welcome to Projects Management</h3>
            <p class="text-muted">Select a project from the sidebar to view its details</p>
        </div>
    </div>
</div>

@*@if (ViewBag.IsAdmin)
