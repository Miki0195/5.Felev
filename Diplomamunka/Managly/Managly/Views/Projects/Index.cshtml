}*@

@await Html.PartialAsync("_TaskDetailsModal")
@await Html.PartialAsync("_CreateTaskModal")
@await Html.PartialAsync("_AddMembersModal")
@await Html.PartialAsync("_DeleteConfirmationModal")
@await Html.PartialAsync("_ManageMembersModal")
@await Html.PartialAsync("_EditProjectModal")
@await Html.PartialAsync("_RestoreProjectModal")

<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3"></div>

@section Scripts {
    <script src="~/js/Projects/Index.js"></script>
} 