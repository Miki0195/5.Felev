@model Managly.Models.Login

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Home/Login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="form-container">
    <h2>Login</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" value="@Model?.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        @*<div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" value="@Model?.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>*@
        <div class="form-group password-wrapper">
            <label asp-for="Password"></label>
            <div class="password-container">
                <input asp-for="Password" type="password" id="password" class="form-control" value="@Model?.Password"/>
                <button type="button" class="toggle-password" onclick="togglePassword('password', 'toggleIcon')">
                    <i id="toggleIcon" class="fas fa-eye"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe">Remember Me</label>
        </div>

        <div class="form-group">
            <span>Are you not registered? <a asp-controller="Home" asp-action="Register">Register</a></span>
        </div>

        <button class="submit-button" type="submit">Login</button>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="text-danger mt-2">@ViewBag.ErrorMessage</div>
        }
    </form>
</div>

<script src="~/js/Account/PasswordVisibility.js"></script>