@model Managly.Models.Login

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Managly</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/Home/Login.css">
</head>
<body>
    <div class="bg-animation">
        <div class="bg-bubble bubble-1"></div>
        <div class="bg-bubble bubble-2"></div>
        <div class="bg-bubble bubble-3"></div>
        <div class="bg-bubble bubble-4"></div>
    </div>

    <div class="auth-container">
        <div class="auth-card">
            <div class="logo">Managly</div>

            <form asp-action="Login" method="post">
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" placeholder=" ">
                    <label for="email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating password-container">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder=" ">
                    <label for="password">Password</label>
                    <button type="button" class="toggle-password" onclick="togglePassword('password', 'toggleIcon')">
                        <i id="toggleIcon" class="fas fa-eye"></i>
                    </button>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe">
                    <label for="rememberMe">Remember me</label>
                </div>

                <button type="submit" class="btn btn-primary btn-login">Sign In</button>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="register-link">
                    Don't have an account? <a asp-controller="Home" asp-action="Register">Register</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Account/PasswordVisibility.js"></script>
</body>
</html>