@model Managly.Models.Register

@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Home/Register.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div class="form-container">
    <h2>Register</h2>
    <form asp-action="Register" method="post" class="register-form">
        <div class="form-group">
            <label asp-for="CompanyName" class="form-label"></label>
            <input asp-for="CompanyName" class="form-input" />
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LicenseKey" class="form-label"></label>
            <input asp-for="LicenseKey" class="form-input" />
            <span asp-validation-for="LicenseKey" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AdminEmail" class="form-label"></label>
            <input asp-for="AdminEmail" class="form-input" />
            <span asp-validation-for="AdminEmail" class="text-danger"></span>
        </div>

        @*<div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-input" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>*@

        <div class="form-group password-wrapper">
            <label asp-for="Password"></label>
            <div class="password-container">
                <input asp-for="Password" type="password" id="password" class="form-control" />
                <button type="button" class="toggle-password" onclick="togglePassword('password', 'toggleIcon')">
                    <i id="toggleIcon" class="fas fa-eye"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @*<div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-input" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>*@

        <div class="form-group password-wrapper">
            <label asp-for="ConfirmPassword"></label>
            <div class="password-container">
                <input asp-for="ConfirmPassword" type="password" id="confirm_password" class="form-control" />
                <button type="button" class="toggle-password" onclick="togglePassword('confirm_password', 'toggleIcon2')">
                    <i id="toggleIcon2" class="fas fa-eye"></i>
                </button>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <span>Are you already registered? <a asp-controller="Home" asp-action="Login">Login</a></span>
        </div>

        <button class="submit-button" type="submit">Register</button>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>

<script src="~/js/Account/PasswordVisibility.js"></script>