@model Beadando.Models.Match

@section Styles {
    <link rel="stylesheet" href="~/css/Match/SearchMatchesForEdit.css" />
}

<div class="modal fade edit-matches-modal" id="editMatchModal" tabindex="-1" aria-labelledby="editMatchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editMatchModalLabel"><strong>Edit Match</strong></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editMatchForm" asp-action="EditMatch" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="teamName" value="@TempData["TeamName"]" />
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="HomeTeamId"></label>
                        <select asp-for="HomeTeamId" class="form-control">
                            @foreach (var team in ViewBag.Teams as List<Beadando.Models.Team>)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                        <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AwayTeamId"></label>
                        <select asp-for="AwayTeamId" class="form-control">
                            @foreach (var team in ViewBag.Teams as List<Beadando.Models.Team>)
                            {
                                <option value="@team.Id">@team.Name</option>
                            }
                        </select>
                        <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LeagueId"></label>
                        <select asp-for="LeagueId" class="form-control">
                            @foreach (var league in ViewBag.Leagues as List<Beadando.Models.League>)
                            {
                                <option value="@league.Id">@league.Name</option>
                            }
                        </select>
                        <span asp-validation-for="LeagueId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StartTime"></label>
                        <input asp-for="StartTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FinalScore"></label>
                        <input asp-for="FinalScore" class="form-control" />
                        <span asp-validation-for="FinalScore" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="HalfTimeScore"></label>
                        <input asp-for="HalfTimeScore" class="form-control" />
                        <span asp-validation-for="HalfTimeScore" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Report"></label>
                        <textarea asp-for="Report" class="form-control"></textarea>
                        <span asp-validation-for="Report" class="text-danger"></span>

                    </div>

                </form>
                <div id="confirmMessage" class="alert alert-warning d-none">
                    <strong>Are you sure you want to save these changes?</strong>
                    <div class="mt-3">
                        <button type="button" class="btn btn-secondary cancel-confirmation">Cancel</button>
                        <button type="button" class="btn btn-primary confirm-edit">Save Changes</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-button">Save</button>
            </div>
        </div>
    </div>
</div>

